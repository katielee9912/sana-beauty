<div class="text-center" role="region" aria-label="404 Error">
  <h1>{{ section.settings.headline }}</h1>
  <p>{{ section.settings.subline }}</p>
  <a class="btn" href="{{ section.settings.cta_link }}" title="{{ section.settings.cta_text }}">
    {{ section.settings.cta_text }}
  </a>
</div>

{% schema %}
  {
    "name": "404",
    "settings": [
      {
        "type": "text",
        "id": "headline",
        "label": "Headline",
        "default": "404 Page Not Found"
      },
      {
        "type": "text",
        "id": "subline",
        "label": "Subline",
        "default": "The page you requested does not exist."
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text",
        "default": "Continue Shopping"
      },
      {
        "type": "url",
        "id": "cta_link",
        "label": "CTA Link",
        "default": "/collections/all"
      }
    ]
  }
{% endschema %}