{% style %}
  #shopify-section-{{ section.id }} {
    {% unless section.settings.margin_top_mobile == 'default' %}
      margin-top: {{ section.settings.margin_top_mobile }};
    {% endunless %}
    {% unless section.settings.margin_bottom_mobile == 'default' %}
      margin-bottom: {{ section.settings.margin_bottom_mobile }};
    {% endunless %}
  }

  #shopify-section-{{ section.id }} > .{{ section_name }} {
    {% unless section.settings.padding_top_mobile == 'default' %}
      padding-top: {{ section.settings.padding_top_mobile }};
    {% endunless %}
    {% unless section.settings.padding_bottom_mobile == 'default' %}
      padding-bottom: {{ section.settings.padding_bottom_mobile }};
    {% endunless %}
  }

  @media screen and (min-width: 1025px) {
    #shopify-section-{{ section.id }} {
      {% unless section.settings.margin_top == 'default' %}
        margin-top: {{ section.settings.margin_top }};
      {% endunless %}
      {% unless section.settings.margin_bottom == 'default' %}
        margin-bottom: {{ section.settings.margin_bottom }};
      {% endunless %}
    }

    #shopify-section-{{ section.id }} > .{{ section_name }} {
      {% unless section.settings.padding_top == 'default' %}
        padding-top: {{ section.settings.padding_top }};
      {% endunless %}
      {% unless section.settings.padding_bottom == 'default' %}
        padding-bottom: {{ section.settings.padding_bottom }};
      {% endunless %}
    }
  }
{% endstyle %}
