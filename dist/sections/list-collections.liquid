<script src="{{ 'grid-collections.js' | asset_url }}" defer="defer"></script>
{{ 'grid-collections.css' | asset_url | stylesheet_tag }}

<div class="grid-collections">
{% for collection in collections %}
  {% unless collection.handle == 'frontpage' %}
    {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}

    <div class="row">
      <div class="col-md-6">
        <h3>{{ collection_title }}</h3>
      </div>

      <div class="col-md-6 text-md-right">
        <a href="{{ collection.url }}" title="{{ 'collections.general.link_title' | t: title: collection_title }}">{{ collection_title }} &rarr;</a>
      </div>
    </div>

    {% unless forloop.last %}<hr>{% endunless %}
  {% endunless %}
{% endfor %}